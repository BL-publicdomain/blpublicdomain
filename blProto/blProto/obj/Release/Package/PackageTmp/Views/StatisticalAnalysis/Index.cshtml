
@{
    ViewBag.Title = "Statistical Analysis";
}

<h3>List of 20 Most Frequent Words</h3>
<div class="container-background">
    <script>
        function goBack() {
            window.history.back()
        }
  
    </script>

    <p><button onclick="goBack()" class="btn btn-default">Go Back</button></p>

    <h4>@ViewBag.titleOfBook</h4>
    <p>This list displays the most frequently occurring words within the full text, excluding stopwords (to find the stopwords that were excluded from the search, follow <a href="~/StopWordList/StopWordList" target="_blank">this link.)</a>.</p>
    
<table border="1" style="width:300px">
    <tr>
        <td><b>Word</b></td>
        <td><b>Frequency</b></td>
    </tr>
    @foreach (var item in ((List<string>)ViewBag.MostFrequentWords).Zip((List<int>)ViewBag.FrequencyOfMostFrequentWords, (word, frequency) => new { word, frequency }))
    {


        <tr>
            <td>@item.word</td>



            <td>@item.frequency</td>
        </tr>


    }
</table>
    
